
import org.marc4j.marc.*;
import java.util.*;

public Set getSignatures(Record record) {
    List fields = record.getVariableFields("SIG");
    Set set = new HashSet(fields.size());
    for (VariableField field : fields) {
        DataField dataField = (DataField) field;
        set.add(fields.getSubfield('a').getData());
    }
    return set;
}

public String hasSignatures(Record record) {
    return Boolean.toString(!record.getVariableFields("SIG").isEmpty());
}